@page
@model RestaurantApplication.Pages.Restaurants.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        Create Restaurant
    </div>
    <div class="card-body">
        <form method="post" asp-action="Create">
            <div class="form-group">
                <label asp-for="Restaurant.Name">Name</label>
                <input type="text" class="form-control" asp-for="Restaurant.Name" placeholder="Enter Name">
            </div>

            <div class="form-group">
                <label asp-for="Restaurant.Cuisine">Cuisine</label>
                <select class="form-control" asp-for="Restaurant.Cuisine"
                        asp-items="Model.Cuisines">
                    <option value="">Select a cuisine</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.City">City</label>
                <input type="text" class="form-control" asp-for="Restaurant.City" placeholder="City">
            </div>
            <div class="form-group">
                <label asp-for="Restaurant.Country">Country</label>
                <input type="text" class="form-control" asp-for="Restaurant.Country" placeholder="Country">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Restaurant.DineIn">
                <label class="form-check-label" asp-for="Restaurant.DineIn">
                    Dine In
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="allrestaurants" class="btn btn-secondary">All Restaurants</a>
        </form>
    </div>
</div>

